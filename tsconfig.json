{
  "include": ["src"],
  "compilerOptions": {
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"]
}
